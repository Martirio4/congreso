<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.demo.nomad.controldeuso5s.MainActivity">

    <TextView
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Control estadistico auditorias"
        android:layout_marginBottom="15dp"
        />
    <LinearLayout
        android:layout_marginStart="@dimen/margenMini"
        android:layout_marginEnd="@dimen/margenMini"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="70"
            android:text="Cuantas veces se abrio la app?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="30"
            android:paddingStart="@dimen/margenMini"
            android:id="@+id/cantApertura"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/margenMini"
        android:layout_marginEnd="@dimen/margenMini"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="70"
            android:text="Cuantas auditorÃ­as se realizaron?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="30"
            android:paddingStart="@dimen/margenMini"
            android:id="@+id/cantAuditorias"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/margenMini"
        android:layout_marginEnd="@dimen/margenMini"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="70"
            android:text="Cuantas areas se crearon?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="30"
            android:paddingStart="@dimen/margenMini"
            android:id="@+id/cantAreas"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/margenMini"
        android:layout_marginEnd="@dimen/margenMini"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="70"
            android:text="Cuantas fotos se tomaron?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="30"
            android:paddingStart="@dimen/margenMini"
            android:id="@+id/cantfotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/margenMini"
        android:layout_marginEnd="@dimen/margenMini"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="70"
            android:text="Cuantos reportes se enviaron?"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="30"
            android:paddingStart="@dimen/margenMini"
            android:id="@+id/cantReportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/botonPorUsuario"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/margenGrande"
        android:layout_marginTop="30dp"
        android:text="Ver por usuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />






</LinearLayout>
