<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    xmlns:adroid="http://schemas.android.com/apk/res-auto"
    android:background="@color/tile4">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-5S"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/marfil"
        android:id="@+id/textViewLogin"
        android:layout_centerHorizontal="true"
        />




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contenedorBotones"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textViewLogin"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            adroid:errorTextAppearance="@style/error_appearance"
            android:textColorHint="@color/marfil"
            android:layout_centerHorizontal="true"
            android:id="@+id/inputLayout1">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Mail"
                android:inputType="textEmailAddress"
                android:textColor="@color/marfil"
                android:textAlignment="center"
                android:id="@+id/editTextUsuario"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputLayout1"
            android:id="@+id/inputLayout2"
            adroid:errorTextAppearance="@style/error_appearance"
            android:textColorHint="@color/marfil"
            android:layout_centerHorizontal="true"
            >

            <EditText
                android:layout_width="300dp"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:id="@+id/editTextPassword"
                android:textColor="@color/marfil"
                android:textAlignment="center"
                android:hint="Password"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputLayout1"
            android:id="@+id/inputLayout3"
            android:visibility="gone"
            adroid:errorTextAppearance="@style/error_appearance"
            android:textColorHint="@color/marfil"
            android:layout_centerHorizontal="true"
            >

            <EditText
                android:visibility="gone"
                android:layout_width="300dp"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:id="@+id/editTextRepePassword"
                android:textColor="@color/marfil"
                android:textAlignment="center"
                android:hint="Password"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INICIAR SESION"
            android:id="@+id/buttonLogin"
            android:layout_below="@id/inputLayout2"
            android:background="@drawable/boton2"
            android:textColor="@color/primary_text"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_marginBottom="@dimen/margenChico"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRARSE"
            android:id="@+id/buttonRegister"
            android:background="@drawable/boton2"
            android:layout_below="@+id/buttonLogin"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_text"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_marginBottom="@dimen/margenChico"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:visibility="gone"
            android:id="@+id/okRegister"
            android:background="@drawable/boton2"
            android:layout_below="@+id/buttonLogin"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_text"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>
    <TextView
        android:layout_marginStart="@dimen/margenChico"
        android:layout_marginEnd="@dimen/margenChico"
        android:textColor="@color/tile2"
        android:layout_marginTop="@dimen/margenGrande"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_below="@id/contenedorBotones"
        android:text="Please register. an Email adress is required for authentication. Your data will not be used for any other purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />







    <ProgressBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"
        />



</RelativeLayout>
