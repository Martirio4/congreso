<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/tile4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomad.audit5s.Fragments.FragmentSubitem">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
    android:gravity="center"
    android:textSize="20dp"
    android:layout_margin="@dimen/margenChico"
    android:text="enunciado"
    android:id="@+id/textoEnunciado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <RadioGroup
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:layout_margin="@dimen/margenChico"
        android:visibility="visible"
        android:id="@+id/rg1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_margin="@dimen/margenChico"
            android:textColor="@color/marfil"
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/item2"
            android:textColor="@color/marfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margenChico"
           />

        <RadioButton
            android:layout_margin="@dimen/margenChico"
            android:textColor="@color/marfil"

            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_margin="@dimen/margenChico"
            android:textColor="@color/marfil"

            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_margin="@dimen/margenChico"
            android:textColor="@color/marfil"
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_criterios"
        android:textColor="@color/colorAccent"
        android:background="@drawable/boton"
        android:text="@string/verCriterios"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/margenChico"
        android:id="@+id/recyclerFotos"
        android:layout_width="match_parent"
        android:layout_height="@dimen/altoImageViewCargarArea">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</FrameLayout>
