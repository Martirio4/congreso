<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:adroid="http://schemas.android.com/apk/res-auto"
    android:background="@color/tile3"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomad.audit5s.Fragments.FragmentCargarArea">
    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_marginEnd="@dimen/margenChico"
        android:layout_marginStart="@dimen/margenChico"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/titulos"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/nuevaArea"
        android:textColor="@color/tile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/divider"
        android:layout_marginStart="@dimen/margenChico"
        android:layout_marginEnd="@dimen/margenChico"
        android:background="@color/tile1"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputNuevaArea"
        adroid:errorTextAppearance="@style/error_appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:gravity="center"
            android:textColor="@color/marfil"
            android:hint="@string/nuevaAreaHint"
            android:id="@+id/nombreNuevaArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImageViewCargarArea">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imagenNuevaArea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImageViewCargarArea" />
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_NuevaArea"
                android:layout_gravity="bottom|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="@dimen/margenChico"
            android:id="@+id/divider2"
            android:layout_marginStart="@dimen/margenChico"
            android:layout_marginEnd="@dimen/margenChico"
            android:background="@color/tile1"
            android:layout_width="match_parent"
            android:layout_height="2dp" />

        <Button
            android:id="@+id/btn_guardarAreaNueva"
            android:textColor="@color/marfil"
            android:text="@string/guardarNuevaArea"
            android:layout_marginTop="@dimen/margenChico"
            android:background="@drawable/boton"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
