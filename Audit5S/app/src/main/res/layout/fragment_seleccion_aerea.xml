<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/tile3"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomad.audit5s.Fragments.FragmentSeleccionAerea">
    <TextView
        android:textSize="@dimen/titulos"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/SeleccionArea"
        android:textColor="@color/tile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/divider"
        android:layout_marginStart="@dimen/margenChico"
        android:layout_marginEnd="@dimen/margenChico"
        android:background="@color/tile1"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerArea"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margenChico"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>
