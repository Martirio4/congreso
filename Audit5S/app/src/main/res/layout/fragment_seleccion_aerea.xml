<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/marfil"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nomad.audit5s.Fragments.FragmentSeleccionAerea">
    <LinearLayout
        android:background="@color/tile3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <TextView
            android:gravity="center"
            android:textSize="@dimen/titulos"

            android:layout_gravity="center_horizontal"
            android:text="@string/SeleccionArea"
            android:textColor="@color/tile1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:layout_marginStart="@dimen/margenChico"
        android:layout_marginEnd="@dimen/margenChico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sinAreas"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondary_text"
        android:id="@+id/textoSinAreas"
        android:visibility="gone"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerArea"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margenChico"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>
