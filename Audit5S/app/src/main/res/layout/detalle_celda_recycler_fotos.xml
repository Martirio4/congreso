<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <android.support.v7.widget.CardView

            android:layout_width="@dimen/anchoTarjeta2"
            android:layout_height="@dimen/altoTarjeta2"
            android:layout_margin="@dimen/margenChico"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/marfil">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margenChico"
                android:background="@color/marfil"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/imagenCamara"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="85"
                    android:background="@color/tile4"
                    android:scaleType="fitXY" />
                <EditText
                    android:visibility="gone"
                    android:id="@+id/editFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/nombreNuevaArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:background="@color/marfil"
                    android:gravity="center"
                    android:text="Click here to add comment"
                    android:textColor="@color/tile4"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>